<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zhy.mvpgankio.category.CategoryFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/black_10171f">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/category"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <!-- 正文 -->
    <com.zhy.libviews.tabLayout.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/black_10171f"
        app:tabIndicatorColor="@color/red_d72d2b"
        app:tabLineOffset="15dp"
        app:tabSelectedTextColor="@color/red_d72d2b"
        app:tabTextAppearance="@style/TabLayoutTextStyle_Size14"
        app:tabTextColor="@color/gray_7c858a" />

    <com.zhy.libviews.vivePager.CustomGestureViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_151d26" />

</LinearLayout>
